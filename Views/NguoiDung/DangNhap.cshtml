@model CLEANSHOP.Models.Customer

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng Nhập | Đăng Ký</h2>
<link href="~/Content/dangnhap.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   

        <hr>



        <div class="box">

            <div class="form">
                <div style="display:flex; justify-content:space-between ; margin:20px">

                    <a class="btn btn-info" style="margin:initial" href="@Url.Action("DangKy", "NguoiDung", new { @class = "form-control" })">Đăng ký</a>

                    <a class="btn btn-info" style="margin:initial ;margin-left:20px" href="/NguoiDung/LoginFB">Facebook</a>
                </div>
                <div>
                    <div class="form-group">
                        <div class="col-md-10" style="margin-bottom:20px">
                            @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập" } })
                            @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                            <i></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 ">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", Type = "password", placeholder = "Password", Id = "myInput" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <i></i>
                            <input class="" type="checkbox" onclick="myFunction()" />Show
                        </div>
                    </div>

                    <p style="color:red;">@ViewBag.ThongBao</p>
                    <div class="form-group" style="padding:30px;">
                        <div class="col-md-offset-2 col-md-10" style=" margin: 0;">
                            <input type="submit" value="Đăng nhập " class="btn btn-info" style="width:100%;" />

                        </div>


                    </div>
                </div>
            </div>
        </div> <!-- card.// -->

    
    <!-- col.// -->


}


<script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

<p style="margin-top:30px">
    @Html.ActionLink("Về trang chủ", "Index", "DichVu")
</p>
